<% #if user own profile show form %>


<div id="picture" class="text-center container-fluid">
	<img class="img-thumbnail rounded mx-auto photo" src="/assets/pictures/<%= @profile_picture.src%>"/>
	<% @pictures.each do |pic| %>
		<img class="img-thumbnail rounded mx-auto photo" src="/assets/pictures/<%= pic.src%>"/>
	<% end %>
</div>

<h2>Biographie</h2>
<div>
	<% if current_user.id == @user.id %>
		<p id="biography" contenteditable='true'><%= h(@user.biography) %></p>
		<input type='submit' value="save">
	<% else %>
		<p><%= h(@user.biography) %></p>
	<% end %> 
</div>
<% if current_user.id == @user.id %>
	<script charset="utf-8" src="/assets/javascript/profile.js"></script>
<% end %>
