
<link rel="stylesheet" href="/assets/stylesheets/matchable.css"  media="screen" charset="utf-8">

<div class="container-fluid d-flex flex-wrap justify-content-center">
	<% @users.each do |user| %>
		<div class="card general-card mx-5 my-2" >
			<img class="card-img-top loader" src="/assets/pictures/loader" id="<%= user.id %>"/>
			<div class="card-body">
				<h5 class="card-title"><%= user.first_name %></h5>
				<p class="text-truncate"> <%= user.biography %> </p>
				<button type="button" class="btn btn-outline-info message"><i class="fa fa-comment"></i></button>
			</div>
		</div>
	<% end %>
</div>
<script charset="utf-8" src="/assets/javascript/matchable.js" type="application/javascript"></script>
